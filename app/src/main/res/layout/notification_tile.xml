<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="20dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_notification_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gordita_regular"
        android:text="August 14, 2019"
        android:textColor="#B1B1B1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/iv_notification_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_icon_material_attach_money"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"

            android:layout_marginTop="15dp"></ImageView>

        <TextView
            android:id="@+id/tv_notification_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1600$ donated to your 'Help our buddy get better' charity"
            android:fontFamily="@font/gordita_medium"
            android:textSize="16sp"
            android:lineSpacingExtra="6dp"
            android:textColor="@color/bw_black">
        </TextView>
    </LinearLayout>
</LinearLayout>