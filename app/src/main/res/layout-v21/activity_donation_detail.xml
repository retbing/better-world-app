<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bw_green_dark">

        <LinearLayout
            android:id="@+id/linearLayoutDonationDetail"
            android:layout_width="match_parent"
            android:layout_height="685dp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="20dp"
            android:background="@drawable/curved_white_bg"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btn_return_page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_return"
                    android:backgroundTint="@color/white"
                    android:text="Button" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/gordita_medium"
                    android:textSize="20sp"
                    android:textColor="@color/bw_black"
                    android:text="@string/donation_detail" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="35dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="120dp"
                    android:layout_height="72dp"
                    android:layout_marginRight="15dp"
                    android:scaleType="centerCrop"
                    tools:srcCompat="@tools:sample/avatars" />

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_charity_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gordita_medium"
                        android:textColor="@color/bw_black"
                        android:layout_marginBottom="15dp"
                        android:textSize="14sp"
                        android:text="Help our buddy get better education" />

                    <TextView
                        android:id="@+id/tv_by"
                        android:layout_width="match_parent"
                        android:textSize="12dp"
                        android:fontFamily="@font/gordita_regular"
                        android:textColor="@color/bw_light_grey_5"
                        android:layout_height="wrap_content"
                        android:text="By: White Hat Organization" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:background="@drawable/button_bg_dark_green"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:textAllCaps="false"
                android:textSize="16dp"
                android:fontFamily="@font/gordita_medium"
                android:layout_marginBottom="35dp"
                android:text="Donate as anonymous" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gordita_medium"
                android:textSize="18dp"
                android:textColor="@color/bw_black"
                android:layout_marginBottom="25dp"
                android:text="Payment Method" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btn_credit_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_empty_circle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="fill"
                    android:paddingLeft="20dp"
                    android:textColor="@color/white"
                    android:layout_height="64dp"
                    android:background="@drawable/button_bg_dark_green"
                    android:layout_weight="1"
                    android:text="@string/credit_card" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btn_bank_transfer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/white"
                    app:srcCompat="@drawable/ic_circle"
                    android:text="Button" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="fill"
                    android:paddingLeft="20dp"
                    android:textColor="@color/white"
                    android:layout_height="64dp"
                    android:background="@drawable/button_bg_dark_green"
                    android:layout_weight="1"
                    android:text="@string/bank_transfer" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="60dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btn_paypal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="15dp"
                    android:backgroundTint="@color/white"
                    app:srcCompat="@drawable/ic_empty_circle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="fill"
                    android:paddingLeft="20dp"
                    android:textColor="@color/white"
                    android:layout_height="64dp"
                    android:background="@drawable/button_bg_dark_green"
                    android:layout_weight="1"
                    android:text="@string/paypal" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gordita_regular"
                    android:textSize="16dp"
                    android:textColor="@color/bw_black"
                    android:text="@string/total" />

                <TextView
                    android:id="@+id/tv_total_donate"
                    android:layout_width="wrap_content"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/bw_black"
                    android:fontFamily="@font/gordita_bold"
                    android:textSize="20dp"
                    android:text="$710.00" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_donate"
            android:layout_width="wrap_content"
            android:layout_weight="10"
            android:layout_height="@dimen/box_size"
            android:background="@drawable/button_bg_light_green_2"
            android:text="Donate"
            android:textColor="@color/bw_green_dark"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/frame_layout_transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.50"
            android:background="@color/black"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">


        </FrameLayout>

        <FrameLayout
            android:id="@+id/frame_layout_numbers"
            android:layout_width="match_parent"
            android:layout_height="520dp"
            android:background="@drawable/frame_layout_success_bg_white"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">




        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>>
</layout>